= form_for @location, url: location_index_path, html: {"data-controller" => "places", "data-action" => "submit->places#preventSubmit places-loaded@window->places#initPlaces"} do |f|
  = f.text_field :location_string, "data-places-target": "input", "class": "w-full p-2 border border-gray-300 rounded", "autocomplete": "off"
  = f.hidden_field :address_line_1, "data-places-target": "address_line_1"
  = f.hidden_field :address_line_2, "data-places-target": "address_line_2"
  = f.hidden_field :city, "data-places-target": "city"
  = f.hidden_field :state, "data-places-target": "state"
  = f.hidden_field :postal_code, "data-places-target": "postal_code"
  = f.hidden_field :country, "data-places-target": "country"
  = f.submit "Get weather!", class: "mt-4 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
